<!-- views/wizards/travel_flight_wizard_views.xml -->

<odoo>
    <record id="view_travel_flight_wizard_form" model="ir.ui.view">
        <field name="name">travel.flight.wizard.form.view</field>
        <field name="model">travel.flight.wizard</field>
        <field name="arch" type="xml">
            <!-- Adjust the form view for Flight Wizard -->
            <form>
                <group>
                    <field name="flight_number"/>
                    <field name="departure_city"/>
                    <field name="arrival_city"/>
                    <field name="departure_time"/>
                    <field name="arrival_time"/>
                    <!-- Add more fields as needed -->
                </group>
            </form>
        </field>
    </record>

    <record id="action_travel_flight_wizard" model="ir.actions.act_window">
        <field name="name">Flight Details</field>
        <field name="res_model">travel.flight.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="Tourism.view_travel_flight_wizard_form"/>
        <field name="target">new</field>
    </record>
</odoo>
