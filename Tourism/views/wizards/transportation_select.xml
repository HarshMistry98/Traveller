<!-- views/wizards/transportation_selection_views.xml -->

<odoo>
    <record id="view_transportation_selection_form" model="ir.ui.view">
        <field name="name">travel.transportation.selection.form</field>
        <field name="model">travel.transportation.selection</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="flight_selected"/>
                    <field name="railway_selected"/>
                    <field name="road_selected"/>
                </group>
                <footer>
                    <button string="Confirm" type="object" class="oe_highlight" name="action_confirm"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
